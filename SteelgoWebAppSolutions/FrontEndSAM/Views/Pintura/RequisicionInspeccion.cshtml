@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section breadcrumb {
    <li>
        <a href="@Url.Action("landing","Home" )"><span id="lblInicio"></span></a>
    </li>
    <li>
        <a href="#"><span id="PinturaBreadcrumb"></span></a>
    </li>
    <li class="active">
        <a href="@Url.Action("RequisicionInspeccion","Pintura" )"><span id="menuPinturaRequisicionInspeccion"></span></a>
    </li>
}
<style>
    #gridPopUp > .k-grid-header > div > table,
    #gridPopUp > .k-grid-content > table {
        width: 100% !important;
    }
    .k-grid tbody tr td a.k-button.k-grid-Cancelar, .k-grid tbody tr td a.k-button.k-grid-Cancel {        
        padding-right: 10px;
        height: 20px;
        margin: 0 auto;
    }

</style>

@*Menu superior*@
<div id="FormGeneraRequisicion" class="form clearfix col-xs-12 col-sm-12 col-md-12 col-lg-12">
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formNav clearfix">
                <input type="hidden" value=@ViewBag.id id="idField" />
                <section class="button-section editButtonSection">
                    <div class="btn-group save-group">
                        <button id="btnGuardarSup" onclick="javascript:void(0);" type="button" class="btn btn-yellow" style="min-width:110px;"><span id="botonGuardar"></span></button>
                        <button id="dropdown-toggle" type="button" class="btn btn-yellow dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caretWhite"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" id="btnGuardar2Sup"><span id="botonGuardar2"></span></a></li>
                            <li><a href="#" id="btnGuardarNuevoSup"><span id="botonGuardarYNuevo"></span></a></li>
                        </ul>
                    </div>
                    <a id="btnCancelar" class="btn btn-black"><span id="botonCancelar"></span></a>
                </section>
                <div class="button-section actionButtonSection">
                    <div class="dropdown action-group">
                        <a id="Acciones" data-target="#" href="#" data-toggle="dropdown" role="button" ariahaspopup="true" aria-expanded="false" class="btn btn-default">
                            <span id="botonAcciones1"></span>
                            <span class="caretBlue"></span>
                        </a>
                    </div>
                </div>
                <input type="file" name="File Upload" id="files" class="hidden" accept=".csv" />
                <a id="Imprimir" href="#" class="btn btn-fadeBlue actionButtonSection"></a>
            </div>
        </div>
    </div>
    @*Controles Superior*@
    <div id="FieldSetView">       
        <div class="row" id="AgregadoDiv">
            <section class="button-section editButtonSection">
                <div class="col-xs-6 col-sm-6 col-md-3 col-lg-2 " id="divOrdenTrabajo">
                    <label class="security_required">Spool ID</label>
                    <input style="width:40%" id="InputOrdenTrabajo" class="item-select general-input" />-<input id="InputID" placeholder="ID" style="width:40%;" />
                </div>
                <div class="col-sm-1 col-md-1 col-lg-1">
                    <label id="">&nbsp;</label>
                    <button type="button" id="btnAgregar" class="btn btn-blue botonSizeGeneral"><span id="botonAgregar"></span></button>
                </div>
            </section>
        </div>
        @*GRID*@
        <div class="row addedSectionInLine">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">                    
                    <div id="ContenedorGrid" class="row">                        
                        <div class="row" id="containerDiv">
                            <div class="col-sm-2 col-md-2 col-lg-2" id="CapturaArmadoHeaderSpoolIDDiv">
                                <label id="columnPinturaFechaSolicitudInsp"></label>
                                <input id="txtFechaSolicitudPlanchado" style="width: auto;" />                                                                            
                            </div>
                            <div class="col-sm-2 col-md-2 col-lg-2" id="CapturaArmadoHeaderSpoolIDDiv">                                
                                <label id="botonPlanchar"></label>
                                <input type="radio" name="Planchar" style="width:auto;" value="SinCaptura" /><span id="lblSinCaptura"></span>
                                <input type="radio" name="Planchar" style="width:auto;" value="Todos" /><span id="lblTodos"> </span>                                
                            </div>
                            <div class="col-sm-1 col-md-1 col-lg-1">
                                <label id=""></label>
                                <button type="button" id="btnPlanchar" class="btn btn-blue botonSizeGeneral"><span id="lblPlanchar"></span></button>                               
                            </div>
                        </div>                        
                        <div id="grid" data-role="grid" class="k-grid k-widget">
                        </div>
                        <input id="hdAccionFiltrado" type="hidden" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    @*Menu Inferior*@
    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
            <div class="formNav clearfix">
                <div class="button-section editButtonSection">
                    <div class="btn-group save-group">
                        <button id="btnGuardarInf" onclick="javascript:void(0);" type="button" class="btn btn-yellow" style="min-width:110px;"><span id="botonGuardar3"></span></button>
                        <button id="dropdown-toggle" type="button" class="btn btn-yellow dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <span class="caretWhite"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a href="#" id="btnGuardar2Inf"><span id="botonGuardar4"></span></a></li>
                            <li><a href="#" id="btnGuardarNuevoInf"><span id="botonGuardarYNuevo1"></span></a></li>
                        </ul>
                    </div>
                    <a id="btnCancelar" class="btn btn-black"><span id="botonCancelar1"></span></a>
                </div>
                <div class="button-section actionButtonSection">
                    <div class="dropdown action-group">
                        <a id="Acciones" data-target="#" href="#" data-toggle="dropdown" role="button" ariahaspopup="true" aria-expanded="false" class="btn btn-default">
                            <span id="botonAcciones2"></span>
                            <span class="caretBlue"></span>
                        </a>
                    </div>
                </div>
                <a id="Imprimir" href="#" class="btn btn-fadeBlue actionButtonSection"></a>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/RequisicionInspeccion/Ajax.js"></script>
<script type="text/javascript" src="~/Scripts/AppComponents/Pintura/RequisicionInspeccion/Handler.js"></script>
